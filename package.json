{
  "name": "e-ims",
  "productName": "E-IMS",
  "description": "An amazing app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm:serve\" \"npm:electron\"",
    "prod": "npm run build && npm run electron-build",
    "serve": "vite",
    "build": "cross-env NODE_ENV=production vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:6969 && electron .",
    "electron-build": "cross-env NODE_ENV=production electron-builder"
  },
  "build": {
    "appId": "E-IMS",
    "mac": {
      "icon": "ims-logo.ico"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "ims-logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "ims-logo.ico",
      "uninstallerIcon": "ims-logo.ico",
      "uninstallDisplayName": "E-IMS"
    },
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "electron/**"
    ]
  },
  "dependencies": {
    "antd": "^5.19.3",
    "d3-ease": "^3.0.1",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "react": "^18.2.0",
    "react-circular-progressbar": "^2.1.0",
    "react-dom": "^18.2.0",
    "react-move": "^6.5.0",
    "react-to-print": "^2.15.1",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "builder": "^5.0.0",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^24.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "react-router-dom": "^6.25.1",
    "vite": "^4.3.2",
    "wait-on": "^7.0.1"
  }
}
